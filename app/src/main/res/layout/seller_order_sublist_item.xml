<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/height_3"
    android:layout_marginBottom="@dimen/height_5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_tracking_id"
            android:fontFamily="@font/open_sans_regular"
            android:maxLines="2"
            android:text="Horlicks"
            android:textColor="@color/colorblack"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_5"
            android:layout_marginRight="@dimen/height_5"
            android:layout_toLeftOf="@+id/txtQty"
            android:fontFamily="@font/open_sans_regular"
            android:text="Qty:"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/txtQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/height_5"
            android:layout_marginRight="@dimen/height_8"
            android:fontFamily="@font/open_sans_regular"
            android:text="2"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_name"
            android:layout_marginTop="@dimen/height_3"
            android:layout_marginBottom="@dimen/height_4"
            android:fontFamily="@font/open_sans_regular"
            android:maxLines="2"
            android:text="box of 450 gm powder"
            android:textSize="15sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="@dimen/height_6"
        android:background="@color/coloryellow" />
</LinearLayout>