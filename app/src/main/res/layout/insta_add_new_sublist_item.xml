<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/height_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_tab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/height_5"
            android:layout_toRightOf="@+id/checkbox"
            android:text="Tab Evion 400mg"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorblack" />


        <ImageView
            android:id="@+id/img_Info"
            android:layout_width="@dimen/height_25"
            android:layout_height="@dimen/height_25"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/height_8"
            android:layout_toRightOf="@+id/txt_tab_name"
            android:src="@drawable/ic_info" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/height_5">

            <TextView
                android:id="@+id/tv_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/height_10"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/colorblack"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/height_10"
                android:layout_toRightOf="@+id/tv_minus"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorblack" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/height_5"
                android:layout_toRightOf="@+id/tv_value"
                android:background="@drawable/rounded_textview"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/colorblack"
                android:textSize="15sp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="@dimen/height_40"
        android:layout_marginTop="@dimen/height_5"
        android:background="@color/colorblack"/>

</LinearLayout>
