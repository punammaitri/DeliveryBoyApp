<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/height_3"
    android:layout_marginLeft="@dimen/height_5"
    android:layout_marginRight="@dimen/height_5"
    android:layout_marginBottom="@dimen/height_5"
    app:cardCornerRadius="@dimen/height_8"
    app:cardElevation="@dimen/height_8"
    android:background="@color/color_gray_bg">


    <LinearLayout
        android:id="@+id/llayout_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img_medicine"
                android:layout_width="@dimen/height_50"
                android:layout_height="@dimen/height_50"
                android:src="@drawable/bottle"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_medicine_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="abc"
                android:fontFamily="@font/open_sans_regular"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:textColor="@color/colorblack"/>
            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:fontFamily="@font/open_sans_regular"
                android:layout_height="wrap_content"
                android:text="Bottle of 60 tablet"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_mrp"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/open_sans_regular"
                    android:layout_height="wrap_content"
                    android:text="MRP"/>
                <TextView
                    android:id="@+id/tv_mrp_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rs151"
                    android:fontFamily="@font/open_sans_regular"
                    android:layout_marginLeft="@dimen/height_10"
                    android:layout_marginRight="@dimen/height_10"/>
                <TextView
                    android:id="@+id/tv_discount"
                    android:fontFamily="@font/open_sans_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10%OFF"
                    android:textColor="@color/colorred"/>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs135"
                android:fontFamily="@font/open_sans_regular"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:textColor="@color/colorblack"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/height_25"
                android:layout_height="@dimen/height_25"
                android:src="@drawable/heart_active"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ADD"
                    android:fontFamily="@font/open_sans_regular"
                    android:textStyle="bold"
                    android:textColor="@color/colorblack"
                    android:gravity="bottom|center"
                    android:layout_marginBottom="@dimen/height_5"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    />


            </RelativeLayout>

        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>