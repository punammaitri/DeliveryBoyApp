<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyAccountActivity"
    android:background="@color/color_gray_bg">


    <include
        android:id="@+id/layout_custom_toolbar"
        layout="@layout/custom_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_custom_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/height_10"
            android:layout_marginRight="@dimen/height_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="My Account"
                android:textColor="@color/colorblack"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginLeft="@dimen/height_10"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/height_10"
                android:layout_marginLeft="@dimen/height_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/open_sans_regular"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    android:text="Profile"
                    android:textColor="@color/colorblack"/>

                <TextView
                    android:id="@+id/tv_edit_profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="EDIT"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="@color/colorblack"/>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/height_8"
                app:cardElevation="@dimen/height_4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/height_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shreya Saran"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/colorblack"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_marginTop="@dimen/height_10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/open_sans_regular"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="+91 8833748362"
                            android:textColor="@color/colorblack"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="shreya@gmail.com"
                            android:fontFamily="@font/open_sans_regular"
                            android:gravity="end"
                            android:textColor="@color/colorblack"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DOB: 21st October 1992"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/colorblack"
                        android:layout_marginTop="@dimen/height_10"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginRight="@dimen/height_10"
                android:layout_marginLeft="@dimen/height_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:fontFamily="@font/open_sans_regular"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textStyle="bold"
                    android:text="Billing Address"
                    android:textColor="@color/colorblack"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="EDIT"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="@color/colorblack"/>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/height_8"
                app:cardElevation="@dimen/height_4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/height_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shreya Saran"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/colorblack"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="@string/address"
                        android:layout_marginTop="@dimen/height_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+91 8833748362"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/colorblack"
                        android:layout_marginTop="@dimen/height_10"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                android:layout_marginTop="@dimen/height_10"
                android:layout_marginLeft="@dimen/height_10"
                android:layout_marginRight="@dimen/height_10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:fontFamily="@font/open_sans_regular"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Delivery Address"
                    android:textColor="@color/colorblack"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_change_delivery_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="CHANGE"
                    android:fontFamily="@font/open_sans_regular"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="@color/colorblack"/>
            </LinearLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#fff"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/height_8"
                app:cardElevation="@dimen/height_4">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/height_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shreya Saran"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/colorblack"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="@string/address"
                        android:layout_marginTop="@dimen/height_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+91 8833748362"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/colorblack"
                        android:layout_marginTop="@dimen/height_10"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>