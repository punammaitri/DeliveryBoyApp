<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardElevation="@dimen/height_2"
        android:id="@+id/cardRating"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardUseCompatPadding="true"
        android:padding="@dimen/height_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="@dimen/height_50"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/bottle" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Flexi-Tip Digital Thermometer"
            android:gravity="center"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/colorblack"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="@dimen/height_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/height_10">
            <TextView
                android:id="@+id/tv_product_mrp"
                android:layout_width="wrap_content"
                android:fontFamily="@font/open_sans_regular"
                android:layout_height="match_parent"
                android:text="Rs123" />

            <TextView
                android:id="@+id/tv_product_discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="30% OFF"
                android:fontFamily="@font/open_sans_regular"
                android:layout_marginLeft="@dimen/height_10"
                android:textColor="@color/colorgreen"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Rs123"
            android:gravity="center"
            android:fontFamily="@font/open_sans_regular"
            android:textColor="@color/colorblack"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginTop="@dimen/height_5"/>


    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>