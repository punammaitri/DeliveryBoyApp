<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:foo="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:background="@color/colorWhite">-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true">

            <FrameLayout
                android:id="@+id/layout_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="36dp"
                android:paddingTop="@dimen/height_8" />

            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="@dimen/height_5">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbarMain"
                    android:background="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    app:elevation="@dimen/height_5">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_menu_camera"
                        android:visibility="gone"
                        android:contentDescription="@null"/>


                    <TextView
                        android:id="@+id/tvMainToolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Home"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorwhite"
                        android:textSize="@dimen/height_20" />

                    <ImageView
                        android:id="@+id/optionMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/height_8"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_menu_camera"
                        android:visibility="visible"
                        android:contentDescription="@null"/>


                    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/frameLayoutNotification"
                        style="?attr/actionButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:clipToPadding="false"
                        android:focusable="true"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:gravity="center"
                            android:src="@drawable/ic_menu_camera"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/cart_badge"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="end|top"
                            android:layout_marginEnd="-8dp"
                            android:layout_marginRight="-8dp"
                            android:background="@drawable/ic_menu_camera"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="0"
                            android:visibility="gone"
                            android:textColor="@android:color/white" />

                    </FrameLayout>
                </android.support.v7.widget.Toolbar>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorblack"/>
            </android.support.design.widget.AppBarLayout>

        </android.support.design.widget.CoordinatorLayout>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:id="@+id/sideView"
            android:layout_width="match_parent"
            android:layout_height= "match_parent"
            android:orientation="vertical"
            android:background="@color/colorlightlightlightGray">

            <include
                foo:customFont="@string/font_family_regular"
                layout="@layout/nav_header_main" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/height_4"
                android:background="@color/colorlightlightlightGray">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvForNavigation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:paddingBottom="@dimen/height_4" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>