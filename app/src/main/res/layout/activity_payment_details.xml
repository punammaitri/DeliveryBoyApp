<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PaymentDetailsActivity"
    android:background="@color/color_gray_bg">


    <include layout="@layout/custom_toolbar"
        android:id="@+id/layout_custom_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/layout_custom_toolbar"
        android:layout_marginLeft="@dimen/height_10"
        android:layout_marginRight="@dimen/height_10">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Details"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans_regular"
            android:layout_marginLeft="@dimen/height_10"
            android:textColor="@color/colorblack"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="@dimen/height_10"
           />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Payment Mode"
            android:fontFamily="@font/open_sans_regular"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/height_10"
            android:textColor="@color/colorblack"
            android:layout_marginTop="@dimen/height_10"
            android:textAppearance="?android:attr/textAppearanceSmall"
            />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/height_8"
            app:cardElevation="@dimen/height_4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/height_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    >

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.7"
                       android:text="PAYTM"
                       android:fontFamily="@font/open_sans_regular"
                       android:textStyle="bold"
                       android:textAppearance="?android:attr/textAppearanceMedium"
                       android:textColor="@color/colorblack"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/height_15"
                            android:src="@drawable/paytm" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_10"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Paytm Wallet, Debit/Credit Cards, Net Banking, UPI  "/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/height_10"
                    android:layout_marginBottom="@dimen/height_10"
                    android:background="@color/colorlightlightGray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="ONLINE PAYMENT"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorblack"/>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/height_15"
                            android:src="@drawable/visa" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:layout_marginTop="@dimen/height_10"
                    android:text="Wallets, Debit/Cards, Net Banking, UPI"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fff"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/height_8"
            app:cardElevation="@dimen/height_4">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/height_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="M.R.P Total"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_weight="0.6"
                        />
                    <TextView
                        android:id="@+id/tv_mrp_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rs350"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_weight="0.4"
                        android:gravity="end"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/height_10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Price Discount"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/open_sans_regular"
                        />
                    <TextView
                        android:id="@+id/tv_price_discount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-Rs30"
                        android:layout_weight="0.4"
                        android:gravity="end"
                        android:fontFamily="@font/open_sans_regular"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/height_10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Shipping Charges"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_weight="0.4"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="As per delivery address"
                        android:layout_weight="0.6"
                        android:fontFamily="@font/open_sans_regular"
                        android:gravity="end"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="@dimen/height_10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="To be paid"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_weight="0.6"
                        android:textColor="@color/colorblack"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_to_be_paid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rs350.0"
                        android:fontFamily="@font/open_sans_regular"
                        android:layout_weight="0.4"
                        android:gravity="end"
                        android:textColor="@color/colorblack"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/height_10"
                    android:background="@color/colorlightlightGray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_20"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Savings"
                        android:fontFamily="@font/open_sans_regular"
                        android:textColor="@color/colorblack"
                        android:layout_marginRight="@dimen/height_10"/>

                    <TextView
                        android:id="@+id/tv_total_savings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_regular"
                        android:text="Rs30.0"
                        android:textColor="@color/colorgreen"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>


    <Button
        android:id="@+id/tv_place_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_30"
        android:layout_marginRight="@dimen/height_30"
        android:layout_marginBottom="@dimen/height_20"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/height_20"
        android:fontFamily="@font/open_sans_regular"
        android:background="@drawable/custom_btn_bg"
        android:text="Place Order"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="@dimen/height_16"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>