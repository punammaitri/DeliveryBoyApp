<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_bg"
    android:orientation="vertical"
    tools:context="com.aiprous.medicobox.instaorder.InstaProductDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtOrderID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_7"
            android:layout_marginTop="@dimen/height_5"
            android:fontFamily="@font/open_sans_regular"
            android:padding="@dimen/height_8"
            android:text="Order ID: 1232323232"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_buyer_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOrderID"
            android:layout_marginLeft="@dimen/height_4"
            android:layout_marginTop="@dimen/height_4"
            android:layout_marginRight="@dimen/height_4"
            android:layout_marginBottom="@dimen/height_4"
            android:fontFamily="@font/open_sans_regular"
            app:cardCornerRadius="@dimen/height_8"
            app:cardElevation="@dimen/height_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/height_4">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_15"
                    android:layout_marginTop="@dimen/height_6"
                    android:layout_marginBottom="@dimen/height_2"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Shreya Saran"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_15"
                    android:layout_marginTop="@dimen/height_4"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="@string/address"
                    android:textAppearance="?android:attr/textAppearanceSmall" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_15"
                    android:layout_marginTop="@dimen/height_5"
                    android:layout_marginBottom="@dimen/height_5"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="+91 8833748362"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/colorPrimary" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/height_15"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="Special Instructions"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.35dp"
                    android:layout_marginLeft="@dimen/height_15"
                    android:layout_marginTop="@dimen/height_12"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="@dimen/height_15"
                    android:background="@color/colorGray" />

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_sellerItemOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardview_buyer_detail"
            android:layout_marginTop="@dimen/height_4" />

    </RelativeLayout>

</RelativeLayout>