<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/height_4"
    android:layout_marginTop="@dimen/height_3"
    android:layout_marginRight="@dimen/height_4"
    android:layout_marginBottom="@dimen/height_3"
    android:background="@color/color_gray_bg"
    app:cardCornerRadius="@dimen/height_8"
    app:cardElevation="@dimen/height_8">


    <LinearLayout
        android:id="@+id/llayout_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_view"
                android:layout_width="@dimen/height_35"
                android:layout_height="@dimen/height_35" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_10"
            android:layout_weight="0.8">

            <TextView
                android:id="@+id/txt_order_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txtDate"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="abc"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorblack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/height_8"
                android:fontFamily="@font/open_sans_regular"
                android:text="29/9/2018"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorblack"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_order_id"
                android:fontFamily="@font/open_sans_regular"
                android:text="Flat No. 104, Green Olive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_content"
                android:fontFamily="@font/open_sans_regular"
                android:text="Amount: Rs. 125" />

            <TextView
                android:id="@+id/txtProcessing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/height_8"
                android:fontFamily="@font/open_sans_regular"
                android:text="Pending"
                android:textColor="@color/color_orange" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>