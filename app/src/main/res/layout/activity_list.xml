<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ListActivity"
    android:orientation="vertical"
    android:background="@color/colorlightlightlightGray">



    <RelativeLayout
        android:id="@+id/rlayout_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:id="@+id/rlayout_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/height_25"
                android:layout_height="@dimen/height_25"
                android:src="@drawable/backarrow"
                android:layout_marginLeft="@dimen/height_20" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rlayout_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rlayout_back_button">

            <ImageView
                android:layout_width="@dimen/height_35"
                android:layout_height="@dimen/height_35"
                android:src="@drawable/ic_menu_camera"
                android:layout_marginLeft="@dimen/height_10" />
        </RelativeLayout>


        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rlayout_plus"
            android:background="@drawable/custom_btn_bg_white"
            android:layout_toLeftOf="@+id/rlayout_cart"
            android:layout_marginLeft="@dimen/height_10"
            android:layout_centerInParent="true"
            >

        </android.support.v7.widget.SearchView>

        <RelativeLayout
            android:id="@+id/rlayout_cart"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/height_20"
            android:layout_alignParentRight="true">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="@dimen/height_27"
                android:layout_marginTop="@dimen/height_4"
                android:background="@drawable/border_circle"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtCart"
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:background="@drawable/white_cart"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </RelativeLayout>
    </RelativeLayout>



   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_below="@+id/rlayout_list_toolbar"
       android:layout_above="@+id/llayout_sort">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Diabetes Care"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:textStyle="bold"
           android:padding="@dimen/height_10"
           android:textColor="@color/colorblack"/>
       <android.support.v7.widget.RecyclerView
           android:id="@+id/rc_medicine_list"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
       </android.support.v7.widget.RecyclerView>
   </LinearLayout>


    <LinearLayout
        android:id="@+id/llayout_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/height_5"
        android:layout_marginLeft="@dimen/height_20"
        android:layout_marginRight="@dimen/height_20"
        android:layout_marginBottom="@dimen/height_5">


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:background="@drawable/custom_btn_bg_white"
            android:text="Sort by"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorblack"
            android:textStyle="bold" />


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:background="@drawable/custom_btn_bg_white"
            android:text="Filter"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorblack"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/height_10"/>

    </LinearLayout>
</RelativeLayout>