<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/height_5"
    android:layout_marginTop="@dimen/height_3"
    android:layout_marginBottom="@dimen/height_5"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/height_10"
    app:cardElevation="@dimen/height_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/height_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_regular"
            android:maxLines="2"
            android:text="Item Names"
            android:textColor="@color/colorblack"
            android:textSize="15sp"
            android:textStyle="bold" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/SubList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_5"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="Total price"
                android:textAllCaps="true"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text=":"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:gravity="end"
                android:text="@string/rs_symbol_total"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_2"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="Total price"
                android:textAllCaps="true"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text=":"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:gravity="end"
                android:text="@string/rs_symbol_total"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_2"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="Vendor Total"
                android:textAllCaps="true"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text=":"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="@string/rs_symbol_total"
                android:gravity="end"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_2"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="SUB Total"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textAllCaps="true"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text=":"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:fontFamily="@font/open_sans_regular"
                android:maxLines="2"
                android:text="@string/rs_symbol_total"
                android:gravity="end"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>