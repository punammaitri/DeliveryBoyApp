<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="medicobox.aiprous.com.medicobox">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.aiprous.medicobox.application.MedicoboxApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.aiprous.medicobox.activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aiprous.medicobox.activity.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aiprous.medicobox.activity.OTPActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aiprous.medicobox.activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aiprous.medicobox.activity.ListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aiprous.medicobox.activity.ProductDescriptionActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aiprous.medicobox.activity.ForgotPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aiprous.medicobox.activity.SetPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aiprous.medicobox.activity.ProductDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aiprous.medicobox.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name="com.aiprous.medicobox.activity.ProductDetailBActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.aiprous.medicobox.instaorder.InstaProductDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.aiprous.medicobox.instaorder.InstaAddNewListActivity"
            android:theme="@style/AppTheme.NoActionBar" />

    </application>

</manifest>